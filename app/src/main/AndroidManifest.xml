<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.summer.demo">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.GET_PACKAGE_SIZE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <!--蓝牙权限 -->
    <uses-permission android:name="android.permission.BLUETOOTH" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme">
        <activity android:name=".AcMain">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".AcListAndGrid"></activity>
        <activity android:name=".ui.AcViewPager"></activity>
        <activity android:name=".ui.MarkDownActivity" />
        <activity android:name=".AcJava" />
        <activity android:name=".AcSelfDemo" />
        <!--screenOrientation 设置为横屏 -->
        <activity
            android:name=".AcCases"
            android:screenOrientation="landscape" />
        <activity android:name=".AcWXApp" />
        <activity android:name=".ui.AcViews" />
        <activity android:name="com.summer.helper.web.WebViewActivity"></activity>
        <activity android:name="com.summer.helper.web.WebContainerActivity"></activity>
        <activity android:name=".ui.ViewBigPhotoActivity" />
    </application>

</manifest>