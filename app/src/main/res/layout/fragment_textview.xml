<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">

	<!-- textAlignment:在矩形内，文本相对的位置，center为居中 -->
	<!-- textAllCaps:英文文本是否全部大写 -->
	<!-- autoLink:文本链接跳转类型 -->
	<LinearLayout
        android:orientation="vertical"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content">

		<TextView

			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="50dp"
			android:autoLink="web"
			android:background="@color/grey_ca"
			android:paddingLeft="30dp"
			android:paddingTop="20dp"
			android:paddingRight="20dp"
			android:text="This 丁香空结雨中愁 www.baidu.com"
			android:textAlignment="textEnd"
			android:textAllCaps="true"
			android:textColor="@color/red_d3"
			android:textSize="30sp" />

		<TextView
			android:id="@+id/tv_content"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="100dp" />


		<TextView
			android:id="@+id/tv_span"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="20dp" />

		<TextView
			android:id="@+id/tv_super"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="20dp"
			android:autoLink="web" />

		<com.summer.demo.ui.view.customfragment.text.MyJustifiedTextView
            android:id="@+id/tv_justify"
			android:layout_width="match_parent"
			android:layout_height="wrap_content" />

	</LinearLayout>
</ScrollView>