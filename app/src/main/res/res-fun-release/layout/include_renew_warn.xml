<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_renew"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:minHeight="40dp"
    android:background="#fff9f6"
    android:visibility="gone">

    <TextView
        android:id="@+id/tv_renew_detail"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/tv_renew"
        android:gravity="center_vertical"
        android:textColor="@color/yellow_ff9"
        android:textSize="@dimen/sp_14"
        android:visibility="visible" />

    <TextView
        android:id="@+id/tv_renew"
        android:layout_width="68dp"
        android:layout_height="26dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:background="@drawable/so_redf8_3"
        android:gravity="center"
        android:text="去续费"
        android:textColor="@color/white"
        android:textSize="14sp" />
</RelativeLayout>
